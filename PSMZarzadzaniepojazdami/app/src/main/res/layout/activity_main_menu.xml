<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.bukowiecmateusz.psmzp.MainMenu"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="192dp"
        android:layout_height="0dp"
        android:fontFamily="serif"
        android:text="Pomocnik Kierowcy"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnProfile"
        style="@android:style/Widget.Button"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:onClick="openProfileTab"
        android:text="Profile"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:textSize="18sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnWydatki"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnWydatki"
        style="@android:style/Widget.Button"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:onClick="openSpendTab"
        android:text="Wydatki"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:textSize="18sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnCenyPaliw"
        app:layout_constraintRight_toRightOf="@+id/btnProfile"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="11dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnProfile" />

    <Button
        android:id="@+id/btnCenyPaliw"
        style="@android:style/Widget.Button"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:onClick="openCitySelect"
        android:text="ceny paliw"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:textSize="18sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnInfo"
        app:layout_constraintRight_toRightOf="@+id/btnWydatki"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="109dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnWydatki"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btnInfo"
        style="@android:style/Widget.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="o autorze"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:onClick="openInfoTab"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnPodsumowanie"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Podsumowanie"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="@+id/btnInfo"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toTopOf="@+id/btnCenyPaliw"
        android:layout_marginRight="17dp"
        android:onClick="openPodsumowanieTab"/>

</android.support.constraint.ConstraintLayout>
